<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArtGallery" parent="Theme.MaterialComponents">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_red</item>
        <item name="colorPrimaryVariant">@color/brand_red</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_purple</item>
        <item name="colorSecondaryVariant">@color/brand_purple</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>